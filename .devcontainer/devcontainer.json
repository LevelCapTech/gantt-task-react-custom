{
  "name": "Node.js DevContainer (npmjs.com publish ready)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer-service",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "npm.publish.enable": true,
        "files.eol": "\n",
        "git.enableSmartCommit": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "christian-kohler.npm-intellisense",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "editorconfig.editorconfig",
        "github.copilot",
        "github.vscode-pull-request-github",
        "visualstudioexptteam.vscodeintellicode"
      ]
    }
  },
  "postCreateCommand": "/bin/bash .devcontainer/post-create.sh",
  "initializeCommand": "[ -f .env ] || printf \"# npm publish 用トークンを設定してください\\nNPM_TOKEN=\\n\" > .env",
  "remoteEnv": {
    "NPM_TOKEN": "${localEnv:NPM_TOKEN}"
  }
}
